public class Main {
    public static void main(String[] args) {
        String name1 = "Вован Иванов";
        String name2 = "иван иванов";

        System.out.println(checkUserName(name1, name2));
    }

    public static String  checkUserName(String s1, String s2) {
        if (s1.equalsIgnoreCase(s2)) {
            return "Выберите другое имя пользователя";
        } else {
            String[] array = s1.split(" ");
            int sum = 0;

            for (String s : array) {
                sum += s.length();
            }

            return "Отличное имя!\n" + "Ваше имя имеет длину " + array[0].length() + " символов\n" + "Ваше полное имя имеет длину " + sum + " символов";
        }
    }
}
