/*
Напишите программу, которая меняет местами элементы одномерного массива из String в обратном порядке.
Не используйте второй массив для хранения результатов.
 */


public class Main {
    public static void main(String[] args) {
        String[] s = { "Каждый ", "охотник ", "желает ", "знать " };
        revers(s);
        for (String value : s) {
            System.out.println(value);
        }
    }

    public static void revers(String[] array) {
        String temp;
        for (int i = 0; i < array.length/2; i++) {
            temp = array[i];
            array[i] = array[array.length-(i+1)];
            array[array.length-(i+1)] = temp;
        }
    }
}
